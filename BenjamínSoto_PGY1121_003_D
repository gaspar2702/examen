            if departamento1[0] == "X":
              print("departamento ya comprado")
              print(departamento1)
            else:
              print("departamento comprado con exito")
              departamento1.pop(0)
              departamento1.insert(0, "X")
              print(departamento1)
              ventastotales = ventastotales + 38000
              comprador = int(
                  input("ingrese su rut sin punto ni digito berificador"))
              compradores.append(comprador)
